{
    "version": 2,
    "builds": [
        { "src": "api.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "/api.py" }
    ],
    "env": {
        "APP_MODULE": "api:app"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "access-control-allow-origin",
                    "value": "*"
                }
            ]
        }
    ]
}